<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.healthlife.activity.SelectSportsActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="#f0f0f0"
        android:gravity="center"
        android:text="请选择一项运动"
        android:textSize="23sp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="15dp"
        android:gravity="center"
        android:background="#f0f0f0" >
    <Button
        android:id="@+id/button_select_pushup"
        android:layout_width="280dp"
        android:layout_height="95dp"
        android:background="@drawable/select_pushupbtn_selector" />
    <Button
        android:id="@+id/button_select_jog"
        android:layout_width="280dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/select_runbtn_selector" />
    <Button
        android:id="@+id/button_select_situp"
        android:layout_width="280dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/select_situpbtn_selector" />
    </LinearLayout>
    
</LinearLayout>
